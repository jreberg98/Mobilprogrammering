<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveRoom">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ACTIVE_ROOM_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ACTIVE_ROOM_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />



    <TextView
        android:id="@+id/ACTIVE_ROOM_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="40sp"
        android:text="%s"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  TODO: Mulighet for å gjøre ting i et rom  -->
    <!--  Eventuelt bare den som har laget rommet? Egendefinert liste?  -->

    <EditText
        android:id="@+id/ACTIVE_ROOM_add_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/ACTIVE_ROOM_add_challenge"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACTIVE_ROOM_title" />

    <ScrollView
        android:id="@+id/ACTIVE_ROOM_challenges_scroller"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ACTIVE_ROOM_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ACTIVE_ROOM_horizontal_guideline"
        app:layout_constraintBottom_toTopOf="@+id/ACTIVE_ROOM_end_room">

        <LinearLayout
            android:id="@+id/ACTIVE_ROOM_challenges_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ScrollView
        android:id="@+id/ACTIVE_ROOM_leaderboard_scroller"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/ACTIVE_ROOM_end_room"
        app:layout_constraintEnd_toStartOf="@+id/ACTIVE_ROOM_vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ACTIVE_ROOM_horizontal_guideline">

        <LinearLayout
            android:id="@+id/ACTIVE_ROOM_leaderboard_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/ACTIVE_ROOM_end_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/ACTIVE_ROOM_close_room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>